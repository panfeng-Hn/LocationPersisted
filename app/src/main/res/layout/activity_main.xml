<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.panfeng.locationpersisted.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:background="#445566"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:text="查看离开提醒位置列表" />
            <Button
                android:id="@+id/awaw_call_list"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:text="进入>"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="#550033"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:text="查看进入提醒位置列表" />
            <Button
                android:layout_width="wrap_content"
                android:layout_marginLeft="100dp"
                android:id="@+id/into_call_list"
                android:text="进入>"
                android:layout_height="match_parent" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#445566"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:text="位置刷新频率：" />
            <EditText
                android:id="@+id/location_refush_rate"
                android:text="60"
                android:layout_width="90dp"
                android:inputType="number"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="秒" />

            <Button
                android:layout_width="wrap_content"
                android:layout_marginLeft="30dp"
                android:id="@+id/set_location_button"
                android:text="设置>"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="#550033"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:text="位置记录查看" />
            <Button
                android:layout_width="wrap_content"
                android:layout_marginLeft="155dp"
                android:text="查看>"
                android:id="@+id/location_cord_watch"
                android:layout_height="match_parent" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:background="#445566"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:text="查看地图" />
            <Button
                android:layout_width="wrap_content"
                android:layout_marginLeft="180dp"
                android:text="查看>"
                android:id="@+id/watch_map"
                android:layout_height="match_parent" />


        </LinearLayout>



    </LinearLayout>


</android.support.constraint.ConstraintLayout>
